<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- regular -->
    <font
        app:font="@font/regular"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- italic -->
    <font
        app:font="@font/italic"
        app:fontStyle="italic"
        app:fontWeight="400" />

    <!-- bold -->
    <font
        app:font="@font/bold"
        app:fontStyle="normal"
        app:fontWeight="700" />

    <!-- light -->
    <font
        app:font="@font/light"
        app:fontStyle="normal"
        app:fontWeight="700" />

    <!-- light italic -->
    <font
        app:font="@font/lightitalic"
        app:fontStyle="italic"
        app:fontWeight="700" />

    <!-- bold italic -->
    <font
        app:font="@font/bolditalic"
        app:fontStyle="italic"
        app:fontWeight="700" />

    <!-- extra bold -->
    <font
        app:font="@font/extrabold"
        app:fontStyle="normal"
        app:fontWeight="700" />

    <!-- extra bold italic -->
    <font
        app:font="@font/extrabolditalic"
        app:fontStyle="italic"
        app:fontWeight="700" />

</font-family>
